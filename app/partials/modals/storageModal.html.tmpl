<div class="form-group">
    <label for="storage-type">Type:</label>
    <select class="form-control" id="storage-type">
        <option ng-repeat="type in STORAGE_TYPES">{{ type }}</option>
    </select>
</div>
<div class="form-group">
    <label for="storage-size">Size:</label>
    <div class="input-group">
        <input type="number" id="storage-size" class="form-control" min="0" aria-describedby="storage-size-addon">
        <span class="input-group-addon" id="storage-size-addon">GB</span>
    </div>
</div>